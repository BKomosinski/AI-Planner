<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/hrvTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HRV"
        android:padding="8dp"/>

    <TextView
        android:id="@+id/restingHeartRateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resting Heart Rate"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/hrvTextView"/>

    <TextView
        android:id="@+id/weightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/restingHeartRateTextView"/>

    <TextView
        android:id="@+id/bedtimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bedtime"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/weightTextView"/>

    <TextView
        android:id="@+id/wakeupTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wakeup Time"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/bedtimeTextView"/>

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/wakeupTimeTextView"/>

</androidx.constraintlayout.widget.ConstraintLayout>
